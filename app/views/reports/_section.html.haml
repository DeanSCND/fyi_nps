%h2
	= title
%h3 
	= subTitle
	%span.bold
		= total.count
	%br
%h3
	Follow-up questions
%h4
	%table.question-table
		%tr
			%td
				.quetion-summary
					.question-label
						-if labels == "positive"
							Addressed key vision concerns
						-else
							Waited too long
			%td	
				= sums[0][:a1]
				indicated yes
				%span{:style=>"font-weight: normal;"}
					= "(" + ((sums[0][:a1].to_f/total.count.to_f)*100).round(2).to_s + "%)"
		%tr
			%td
				.quetion-summary
					.question-label
						-if labels == "positive"
							Provided ideal product options
						-else
							Lack of expertise
			%td
				= sums[0][:a2]
				indicated yes
				%span{:style=>"font-weight: normal;"}
					= "(" + ((sums[0][:a2].to_f/total.count.to_f)*100).round(2).to_s + "%)"
			%tr
				%td
					.quetion-summary
						.question-label
							-if labels == "positive"
								Staff and doctor were friendly
							-else
								Friendliness of staff and doctor
				%td
					= sums[0][:a3]
					indicated yes
					%span{:style=>"font-weight: normal;"}
						= "(" + ((sums[0][:a3].to_f/total.count.to_f)*100).round(2).to_s + "%)"
			%tr
				%td
					.quetion-summary
						.question-label
							-if labels == "positive"
								Appointment began promptly
							-else
								Did not address your key concerns

				%td
					= sums[0][:a4]
					indicated yes
					%span{:style=>"font-weight: normal;"}
						= "(" + ((sums[0][:a4].to_f/total.count.to_f)*100).round(2).to_s + "%)"
			%tr
				%td
					.quetion-summary
						.question-label
							-if labels == "positive"
								Staff demonstrated strong expertise
							-else
								Not satisfied with products

				%td
					= sums[0][:a5]
					indicated yes
					%span{:style=>"font-weight: normal;"}
						= "(" + ((sums[0][:a5].to_f/total.count.to_f)*100).round(2).to_s + "%)"
			%tr
				%td
					.quetion-summary
						.question-label
							Other (with Comments)
				%td
