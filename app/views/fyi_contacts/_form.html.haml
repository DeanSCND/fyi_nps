= form_for [@clinic, @fyi_contact] do |f|
  - if @fyi_contact.errors.any?
    #error_explanation
      %h2= "#{pluralize(@fyi_contact.errors.count, "error")} prohibited this contact from being saved:"
      %ul
        - @fyi_contact.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label "Email"
    = f.text_field :email
  .actions
    = f.submit 'Save'
