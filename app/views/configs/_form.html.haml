= form_for @config do |f|
  - if @config.errors.any?
    #error_explanation
      %h2= "#{pluralize(@clinic.errors.count, "error")} prohibited this config from being saved:"
      %ul
        - @config.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :value
    = f.text_field :value
  .actions
    = f.submit 'Save'
