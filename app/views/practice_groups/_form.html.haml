= form_for @practice_group do |f|
  - if @practice_group.errors.any?
    #error_explanation
      %h2= "#{pluralize(@practice_group.errors.count, "error")} prohibited this practice_group from being saved:"
      %ul
        - @practice_group.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
