= form_for @survey do |f|
  - if @survey.errors.any?
    #error_explanation
      %h2= "#{pluralize(@survey.errors.count, "error")} prohibited this survey from being saved:"
      %ul
        - @survey.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :run
    = f.text_field :run
  .field
    = f.label :count
    = f.number_field :count
  .field
    = f.label :month
    = f.text_field :month
  .field
    = f.label :status
    = f.text_field :status
  .actions
    = f.submit 'Save'
